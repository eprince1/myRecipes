<h1 align="center">Recipe Name: <%= @recipe.name.capitalize %></h1>
<hr />
<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong>Description: </strong></h4>
  <hr />
  
  <div id="chefname"><%= @recipe.description %></div>
    <p>
      Created by:
    </p>
  <p>
    <small><%= @recipe.chef.chefname %></small>
    <div class="pull-right">Created: <%=time_ago_in_words(@recipe.created_at) %> ago</div>
  </p>
  <div class="recipe-actions">
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-xs btn-warning" %>
    <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete,
                                      data: { confirm: "Are you sure you want to delete this recipe?" },
                                      class: "btn btn-xs btn-danger" %>
    <%= link_to "Back to recipe listing", recipes_path, class: "btn btn-xs btn-primary" %>
  </div>
</div>